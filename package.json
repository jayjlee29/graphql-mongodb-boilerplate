{
  "name": "graphql-server",
  "version": "1.0.0",
  "description": "",
  "main": "src/index.js",
  "scripts": {
    "test": "jest --detectOpenHandles --forceExit",
    "mongodb": "docker run --rm --name local-mongo -p 27017:27017 -d mongo",
    "start": "node ./dist/server.js",
    "dev": "nodemon 'src/server.ts' --exec 'ts-node' src/server.ts -e ts,graphql --unhandled-rejections=strict",
    "build": "tsc --build && npm run copy-resource",
    "clean": "rm -rf dist/  && tsc --build --clean",
    "copy-resource": "copyfiles -u 1 src/**/*.gql dist/"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@graphql-tools/load-files": "^6.2.5",
    "@graphql-tools/merge": "^6.2.7",
    "@types/jsonwebtoken": "^8.5.0",
    "apollo-server-express": "^2.19.0",
    "compression": "^1.7.4",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-graphql": "^0.11.0",
    "graphql": "^15.4.0",
    "graphql-compose": "^7.22.1",
    "graphql-compose-mongoose": "^9.0.0",
    "graphql-subscriptions": "^1.1.0",
    "jsonwebtoken": "^8.5.1",
    "log4js": "^6.3.0",
    "mongoose": "^5.10.13",
    "nanoid": "^3.1.20",
    "restify": "^8.5.1",
    "subscriptions-transport-ws": "^0.9.18"
  },
  "devDependencies": {
    "@babel/plugin-proposal-class-properties": "^7.13.0",
    "@babel/preset-env": "^7.13.5",
    "@babel/preset-typescript": "^7.13.0",
    "@types/compression": "^1.7.0",
    "@types/express": "^4.17.8",
    "@types/graphql": "^14.5.0",
    "@types/graphql-depth-limit": "^1.1.2",
    "@types/jest": "^26.0.20",
    "@types/mongoose": "^5.7.37",
    "@types/node": "^14.14.6",
    "babel-polyfill": "^6.26.0",
    "copyfiles": "^2.4.1",
    "graphql-depth-limit": "^1.1.0",
    "graphql-import": "^1.0.2",
    "graphql-import-node": "0.0.4",
    "jest": "^26.6.3",
    "nodemon": "^2.0.6",
    "supertest": "^6.1.3",
    "ts-jest": "^26.5.2",
    "ts-node": "^9.0.0",
    "typescript": "^4.2.2"
  },
  "jest": {
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "testRegex": "\\.test\\.ts$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ],
    "globals": {
      "ts-jest": {
        "diagnostics": true
      }
    }
  }
}
